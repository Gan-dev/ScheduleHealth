<div class="container">
    <div class="titlebox">
        <div class="row justify-content-md-center align-items-center">

            <div class="col-4">

                <div>
                    <h1 class="maintitle">COUNT ON ME</h1>
                    <h2 class="subtitle">Right on time for living!</h2>
                </div>

            </div>
            <div class="col-4 mb-3">
                <img class="logo-solo-title"
                    src="https://64.media.tumblr.com/3e10da3319227cb752616cfc77ee3454/333f51c691f30a6a-1c/s400x600/da5f6eecb03cf9c0071d450e6dd187a3bffe0373.pnj"
                    alt="logo-solo">
            </div>
        </div>
    </div>
</div>
{{#if currentUser}}{{else}}
<div class="logButton">
    <a href="/login" style="padding: 10px 60px"
        class="btn btn-lg btn-secondary btn-lg position-sticky top-100 start-50 translate-middle"> Log In</a>
</div>
{{/if}}


<div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://64.media.tumblr.com/df583aa04b3482ecbc58dbfa91d08abe/0010e166b3ed3a12-1d/s2048x3072/45b9a32e94f6664f746702ce26fa7b69cece9d83.pnj"
                class="d-block w-100" alt="line1">
            <div class="carousel-caption d-none d-md-block">
                <h2>Schedule master</h2>
                <h4>Schedule your events and subscribe to your friends' events</h4>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://64.media.tumblr.com/dd5a505a845254fb7379d971ef54e52a/0010e166b3ed3a12-b2/s2048x3072/5c33f5fb43cd70149261c4d1934e93cfb64ddf03.jpg"
                class="d-block w-100" alt="line2">
            <div class="carousel-caption d-none d-md-block">
                <h2>Stay informed</h2>
                <h4>Read all your latest news selected by your preferences</h4>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://64.media.tumblr.com/df583aa04b3482ecbc58dbfa91d08abe/0010e166b3ed3a12-1d/s2048x3072/45b9a32e94f6664f746702ce26fa7b69cece9d83.pnj"
                class="d-block w-100" alt="line3">
            <div class="carousel-caption d-none d-md-block">
                <h2>Keep your mood's track </h2>
                <h4>Keep track of how you feel and read an upbeat message every day</h4>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>