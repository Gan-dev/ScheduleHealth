<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit my Profile</h1>
            <hr>
            <form action="/profile/edit" method="POST">

                <div class="mb-3 row">

                    <div class="col-md-6">
                        <label for="emailInput" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailInput" name="email" value="{{users.email}}">
                    </div>
                    <div class="col-md-6">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username"
                            value="{{users.username}}">
                    </div>
                    <div class="col-md-3">
                        <label for="age" class="form-label">Birth Date</label>
                        <input type="date" class="form-control" id="age" name="birth" value="{{users.birth}}">
                    </div>
                    <div class="col-md-3">
                        <label for="zip" class="form-label">Zip Code</label>
                        <input type="number" class="form-control" id="zip" name="zipCode" pattern="\d{5}"
                            value="{{users.zipCode}}">
                    </div>
                    <div class="col-md-6">
                        <label for="firstname" class="form-label">First name</label>
                        <input type="text" class="form-control" id="firstname" name="firstName"
                            value="{{users.firstName}}">
                    </div>
                    <div class="col-md-6">
                        <label for="lastname" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastname" name="lastName"
                            value="{{users.lastName}}">
                    </div>
                    <div class="col-md-12 text-center">
                        <h3 style="text-align: left;" class="mt-3">Preferencias de Noticias</h3>
                        <hr>
                        <select class="form-select" aria-label="Disabled select example" name="newsPreferences"
                            multiple>
                            {{#each newsPreferences.[0].enum}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each }}
                        </select>

                    </div>
                </div>

                <div class=" d-grid gap-2">
                    <button type="submit" class="btn btn-secondary block">Submit changes</button>
                </div>
                <div class="d-grid gap-2">
                    <a href="/myprofile/{{id}}" class="btn btn-dark block">Cancel</a>
                </div>
                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>
</div>