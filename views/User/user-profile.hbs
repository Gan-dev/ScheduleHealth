<div class="container">

    <h2 class="mt-5">Hello <strong>{{users.firstName }}</strong> !</h2>
    <hr style="width: 75%; margin: 30px auto;">
    <h4>My Profile</h4>

    <div class="row">
        <div class="col-md-2">
            <nav class="nav flex-column">
                <a class="nav-link active" aria-current="page" href="/news">News</a>
                <a class="nav-link" href="/myevents">My events</a>
                <a class="nav-link" href="/publicevents">Public Events</a>
                <a class="nav-link" href="/subscribedevents">Suscribed Events</a>
                <a class="nav-link" href="/calendar">My Calendar</a>

                {{#if userRole.isUser}}
                <a class="nav-link" href="/myprofile/edit">Editar mi perfil</a>
                {{/if}}
                <a class="nav-link" href="/">Return</a>
            </nav>
        </div>
        <div class="col-md-10">
            <img style="width: 200px" src="{{users.avatar}}" alt="avatar">
        </div>

        {{#if userRole.isAdmin}}
        <div>

            <a href="/myprofile/edit" class="btn btn-lg btn-danger">Editar</a>

            <form action="/myprofile/delete" method="POST" style="display: inline">
                <input type="submit" value="Eliminar" class="btn btn-lg btn-dark"
                    onclick="return confirm('Are you sure you want to delete this profile?')">
            </form>
            <hr>
        </div>
        {{/if}}
    </div>
</div>

</div>