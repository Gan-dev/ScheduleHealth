<div class="container">

    <h2>My Profile</h2>
    <hr>

    <h2>Hello <strong>{{users.firstName }}</strong> !</h2>

    <img style="width: 200px" src="{{users.avatar}}" alt="avatar">

    <div>
        <a href="/news" class="btn btn-lg btn-secondary">View News</a>
        <a href="/" class="btn btn-lg btn-secondary">Check my events</a>
    </div>
    <div>

        <a href="/" class="btn btn-lg btn-secondary">Return</a>
        <hr>
    </div>

    {{#if userRole.isUser}}

    <a href="/myprofile/edit" class="btn btn-lg btn-dark">Editar mi perfil</a>

    {{/if}}

    {{#if userRole.isAdmin}}
    <div>

        <a href="/myprofile/edit" class="btn btn-lg btn-danger">Editar</a>

        <form action="/myprofile/delete" method="POST" style="display: inline">
            <input type="submit" value="Eliminar" class="btn btn-lg btn-dark"
                onclick="return confirm('Are you sure you want to delete this profile?')">
        </form>
        <hr>
    </div>
    {{/if}}
</div>