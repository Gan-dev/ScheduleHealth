<div class="container">

    <h2>Public Event Details</h2>

    <div class="row">
        <p>{{name}}</p>

        <div class=" card col-8" style="color: black;">
            <h4 class="card-title"><strong>{{ event.name }}</strong></h4>

            <h5 class="card-title"><strong>Date: </strong>{{ event.date }}</h5>
            <hr>
            <h5 class="card-title"><strong>Description: </strong>{{ event.description }}</h5>
            <hr>
            {{#if userRole.isUser}}
            <form action="/subscribe/{{event._id}}" method="POST" style="display: inline">
                <input type="submit" value="Suscribe" class="btn btn-lg btn-dark">
            </form>
            <form action="/publicevents/{{event._id}}" method="POST" style="display: inline">
                <input type="submit" value="Unsubscribe" class="btn btn-lg btn-dark">
            </form>

            {{/if}}

            {{#if userRole.isAdmin}}
            <div>
                <form action="/publicevents/delete/{{event._id}}" method="POST" style="display: inline">
                    <input type="submit" value="Delete" class="btn btn-lg btn-dark"
                        onclick="return confirm('Are you sure you want to delete this Event?')">
                </form>
            </div>

            {{/if}}
            <a href="/publicevents" class="btn btn-lg btn-secondary">Return</a>
            <hr>
        </div>
    </div>
</div>