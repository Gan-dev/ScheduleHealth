<div class="container">

    <h2>Event Details</h2>

    <div class="row">
        <p>{{name}}</p>

        <div class=" card col-4" style="color: black;">
            <h4 class="card-title"><strong>{{ event.name }}</strong></h4>

            <h5 class="card-title"><strong>Date: </strong>{{ event.date }}</h5>
            <hr>
            <h5 class="card-title"><strong>Description: </strong>{{ event.description }}</h5>
            <hr>
            {{#if userRole.isUser}}
            <form action="/subscribedevents/{{event._id}}" method="POST" style="display: inline">
                <input type="submit" value="Unsubscribe" class="btn btn-lg btn-dark">
            </form>

            {{/if}}


            {{#if userRole.isAdmin}}
            <div>
                <form action="/subscribedevents/delete/{{event._id}}" method="POST" style="display: inline">
                    <input type="submit" value="Delete" class="btn btn-lg btn-dark"
                        onclick="return confirm('Are you sure you want to delete this Event?')">
                </form>

            </div>

            {{/if}}
            <a href="/subscribedevents" class="btn btn-lg btn-success">Return</a>
            <hr>


        </div>

    </div>




</div>