<div class="container">

    <h2>Event Details</h2>
    <hr>

    <div class="row">
        <div class="col-md-2">
            {{>eventDetailsNav}}
        </div>

        <div class="col-md-10">
            <div class="row">
                <p>{{name}}</p>

                <div class=" card col-md-8" style="color: black;">
                    <h4 class="card-title"><strong>{{ event.name }}</strong></h4>

                    <h5 class="card-title"><strong>Date: </strong>{{ event.date.start }}</h5>
                    <hr>
                    <h5 class="card-title"><strong>Description: </strong>{{ event.description }}</h5>
                    <hr>
                    <a href="/events/edit/{{event._id}}">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>